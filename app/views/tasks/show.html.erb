<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= link_to "Edit Task", edit_task_path %></p>
  <% if @task.completed %>
    <p>☑︎ This task is completed</p>
  <% else %>
    <p>☐  This task is not completed yet</p>
  <% end %>
<%= link_to "Delete", task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<br>
<p> <%= link_to 'Back to list',  tasks_path%></p>
